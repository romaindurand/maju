{
  "compilerOptions": {
    "target": "ES2019",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": [
    "index.ts",
    "demo2/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}